{
   "compilerOptions": {
      "allowJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "ES7"
      ],
      "module": "ES2022",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "outDir": "build",
      "resolveJsonModule": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "target": "es2016"
   }
}
